<h1 class="text-2xl font-bold mb-4">Crypto Comparison</h1>
<table class="min-w-full bg-white border border-gray-200">
  <thead>
    <tr>
      <th class="px-4 py-2 border-b-2 border-gray-200 bg-gray-100 text-left">Name</th>
      <th class="px-4 py-2 border-b-2 border-gray-200 bg-gray-100 text-left">Symbol</th>
      <th class="px-4 py-2 border-b-2 border-gray-200 bg-gray-100 text-left">Price</th>
      <th class="px-4 py-2 border-b-2 border-gray-200 bg-gray-100 text-left">Market Cap</th>
      <th class="px-4 py-2 border-b-2 border-gray-200 bg-gray-100 text-left">24h Volume</th>
    </tr>
  </thead>
  <tbody>
    <% @cryptos.each do |crypto| %>
      <tr class="even:bg-gray-100 hover:bg-gray-200">
        <td class="px-4 py-2 border-b border-gray-200"><%= crypto["name"] %></td>
        <td class="px-4 py-2 border-b border-gray-200"><%= crypto["symbol"] %></td>
        <td class="px-4 py-2 border-b border-gray-200">$<%= number_to_currency(crypto["current_price"], unit: '') %></td>
        <td class="px-4 py-2 border-b border-gray-200">$<%= number_to_currency(crypto["market_cap"], unit: '') %></td>
        <td class="px-4 py-2 border-b border-gray-200">$<%= number_to_currency(crypto["total_volume"], unit: '') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
